<!-- _partial/rawpage -->

<div class="row page">

    <% if (theme.widgets.length) { %>
	<div class="col-md-9">
	<% } else { %>
	<div class="col-md-12">
	<% } %>

    <% if (theme.apps.length){ %>
<div class="well well-sm">
    <div class="app_galary_outter">
        <div class="app_galary_inner">
            <table class="app_galary_table">
                <tr>
	<% for (var i in theme.apps){ %>
                <td>
                    <div style="display: inline-block; margin: 5px;">
                        <a href="<%- theme.apps[i].url %>" title="<%- theme.apps[i].intro %>">
                            <% if (theme.apps[i].icon) { %>
                            <i class="<%- theme.apps[i].icon %>"></i>
                            <% } %>
                            <% if (theme.apps[i].image) { %>
                            <img class="img-rounded" src="<%- theme.apps[i].image %>" width="90%" height="90%">
                            <% } %>
                        </a>
                    </div>
                </td>
	<% } %>
                </tr>
            </table>
        </div>
    </div>
</div>
<% } %>

	<!-- content -->
    <%- item.content %>

    <a data-url="<%- page.permalink %>" data-id="<%= page._id %>" class="article-share-link">Share</a>
    <br>
        
	</div> <!-- col-md-9/col-md-12 -->

    <% if (theme.widgets.length) { %>
        <%- partial('sidebar') %>
    <% } %>

</div><!-- row -->
